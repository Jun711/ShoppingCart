<div class="row">
	<div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
		<div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
			{{ successMsg }}
		</div>
	</div>
</div>

<!-- <h1>{{title}}</h1>
<p>Welcome to {{title}}</p> -->
{{# each products}}
	<div class="row">
		{{# each this}}
			<div class="col-sm-6 col-md-4">
			    <div class="thumbnail">
			      <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
			      <div class="caption">
			        <h3>{{ this.title }}</h3>
			        <p class="description">{{ this.description }}</p>
			        <div class="clearfix"><!-- <a href="#" class="btn btn-primary" role="button">Button</a> --> 
			        	<div class="price pull-left">$ {{ this.price }}</div>
			        	<a href="/add-to-cart/{{ this._id }}" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
			        </div>
			      </div>
			    </div>
			  </div>
		{{/each}}
	</div>
{{/each}}
